<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#e7e1e1">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scannerButton"
        android:nestedScrollingEnabled="false"
        android:src="@drawable/about"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/interact"
        android:layout_alignStart="@+id/interact" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/interact"
        android:src="@drawable/interact"
        android:layout_below="@+id/scannerButton"
        android:layout_alignLeft="@+id/nearby"
        android:layout_alignStart="@+id/nearby"
        android:layout_alignRight="@+id/nearby"
        android:layout_alignEnd="@+id/nearby" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/photo"
        android:src="@drawable/photo"
        android:layout_below="@+id/interact"
        android:layout_alignLeft="@+id/interact"
        android:layout_alignStart="@+id/interact" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share"
        android:src="@drawable/share"
        android:layout_below="@+id/photo"
        android:layout_alignLeft="@+id/photo"
        android:layout_alignStart="@+id/photo" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nearby"
        android:layout_below="@+id/share"
        android:layout_centerHorizontal="true"
        android:src="@drawable/nearby" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/comments"
        android:src="@drawable/comments"
        android:layout_below="@+id/share"
        android:layout_toRightOf="@+id/share"
        android:layout_toEndOf="@+id/share" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView"
        android:textColor="#191970"
        android:layout_alignBottom="@+id/comments"
        android:layout_alignRight="@+id/nearby"
        android:layout_alignEnd="@+id/nearby" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logout"
        android:isScrollContainer="false"
        android:src="@drawable/logout"
        android:layout_alignBottom="@+id/textView"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

</RelativeLayout>
